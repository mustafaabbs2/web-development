{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\App.js",
            "runtimeArgs": ["--experimental-modules"],
            "env": {
                "NODE_OPTIONS": "--experimental-specifier-resolution=node"
            }
        }
    ]
}